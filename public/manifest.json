{
  "name": "FU Clubs Manager",
  "short_name": "FUCM",
  "description": "Một tiện ích Chrome để quản lý các group Facebook của các CLB thuộc Đại học FPT",
  "version": "0.4.0",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "FU Clubs Manager"
  },
  "permissions": [
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "https://*.facebook.com/",
    "https://*.firebaseio.com/"
  ],
  "content_security_policy": "script-src 'self' https://*.firebaseio.com https://*.fontawesome.com; object-src 'self'"
}
