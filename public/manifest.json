{
  "name": "FU Clubs Manager",
  "short_name": "FUCM",
  "description": "Một tiện ích Chrome để quản lý các CLB của Đại học FPT hoạt động trên nhóm Facebook.",
  "version": "0.3.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "FU Clubs Manager"
  },
  "permissions": [
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "https://*.facebook.com/",
    "https://*.firebaseio.com/"
  ],
  "content_security_policy": "script-src 'self' https://*.firebaseio.com https://*.fontawesome.com; object-src 'self'"
}
